datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  Account     Account[]
}

model Account {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  description String
  type        String
  company     Company @relation(fields: [companyId], references: [id])
  companyId   String  @db.ObjectId
}
